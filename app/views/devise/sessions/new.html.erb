<%= content_tag(:section, id: 'devise-form', class: 'row') do %>
  <div class="devise-form-content small-12 large-6 xlarge-5 small-centered columns">
    <h2 class="main-heading font-centered">Log in</h2>
    <%= render partial: 'components/flash' %>
    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-inputs">
        <%= f.input :auth_tier, as: :hidden, :input_html => { value: 0 } %>
        <%= f.input :email, required: false, autofocus: true %>
        <%= f.input :password, required: false %>
        <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
      </div>

      <div class="form-actions">
        <%= f.button :submit, "Log in", class: 'btn btn-primary' %>
      </div>
    <% end %>
    <%= render "devise/shared/links" %>
  </div>
<% end %>
